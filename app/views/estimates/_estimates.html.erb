<% if estimates.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <th>登録日時</th>
      <th>氏名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>面談内容</th>
    </thead>
    <% estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to estimate.name, estimate_path(estimate.id) %></td>
        <td><%= estimate.address %></td>
        <td><%= estimate.tel %></td>
        <td><%= estimate.content %></td>
      </tr>
    <% end %>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>

<div class="text-center">
  <p><%= link_to '見積依頼者登録', new_estimate_path %></p>
</div>
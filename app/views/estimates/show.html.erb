<table class="table">
  <tr>
    <th>氏名</th>
    <td><%= @estimate.name %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @estimate.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @estimate.tel %></td>
  </tr>
</table>

<div class="row justify-content-sm-center">
  <div class="col-sm-auto">
    <%= link_to "戻る", estimates_url, class: "btn btn-secondary" %>
  </div>
  <div class="col-sm-auto">
    <%= link_to "編集", edit_estimate_path(@estimate.id), class: "btn btn-primary" %>
  </div>
  <div class="col-sm-auto">
    <%= link_to "アポ調整", matchings_estimate_path(@estimate.id), class: "btn btn-success" %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-sm-left">
    <div class="col-sm-auto"><b><%= partner.name %></b></div>
    <div class="col-sm-auto">へマッチング済み見積依頼者一覧</div>
  </div>
</div>

<% if estimates.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <th>登録日時</th>
      <th>氏名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>面談内容</th>
    </thead>
    <% estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.created_at.to_s(:datetime_jp) %></td>
        <td><%= estimate.name %></td>
        <td><%= estimate.address %></td>
        <td><%= estimate.tel %></td>
        <td><%= estimate.content %></td>
      </tr>
    <% end %>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>

<% if current_partner.admin? %>
  <%= link_to "見積一覧", estimates_url, class: "btn btn-primary" %>
<% end %>